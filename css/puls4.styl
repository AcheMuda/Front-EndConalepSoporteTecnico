@font-face 
    font-family: 'icomoon'
        src:url('../fonts/icomoon.eot?-86m8ff')
        src:   
                url('../fonts/icomoon.eot?#iefix-86m8ff') format('embedded-opentype'),
                url('../fonts/icomoon.woff?-86m8ff') format('woff'),
                url('../fonts/icomoon.ttf?-86m8ff') format('truetype'),
                url('../fonts/icomoon.svg?-86m8ff#icomoon') format('svg')
        font-weight: normal
        font-style: normal




gris_oscuro = #444
azul = #22BCE0
naranja = #DD4F24
gris_texto = #7a7a7a



a
    color naranja

body
    background: #E8E8E8
    color: gris_oscuro
    font-family: Arial
    font-size: 16 px

header
    background: gris_oscuro
    color: white
    padding: 1em
    position relative 
    overflow hidden
    box-shadow 0 5px 0 rgba(0, 0 , 0,0.2)
    z-index 1
    .logo
        border-right 1px solid azul
        width: 60px
        img
            width: 52px

    .titular        
        margin 0 80px 0 70px
        .titulo
            font-size 18px
            font-weight normal
            margin 0
            padding 0

        .filtro
            font-size 14px
            color azul
            text-decoration none
            fonte-style italic
            font-weight bold

        .publicar
            background naranja
            color white
            fonte-style italic
            padding 0.2em 0.5em
            text-decoration none
            text-shadow 2px 2px 0px black
            float right
            margin  0px -10px 0 0

            &:before
                font-family icomoon
                content "\e600" 




    .usuario
        position absolute
        right 10px
        top 10px
        .avatar
            margin 0 1.3em 0 0 
            position relative
            z-index 2
            img
                width 50px
                border-radius 50%
        .flechita 
            display block
            background naranja
            color white
            text-align right
            position absolute
            width 50%
            top  15px
            right 0
            padding 5px 
            text-decoration none
            padding 3px

            &:after
                font-family icomoon
                content "\e602"
            
            

nav
    background azul
    border-left 15px solid white
    position relative

    &:before 
        position absolute
        content ""
        border-bottom 22px solid transparent
        border-left 7px solid white
        border-top 22px solid transparent
        top 0
        left 0

    .menu
        height 45px
        line-height 20px
        margin 0
        padding 0
        overflow-x auto
        white-space nowrap

        li
            display inline-block
            a
               
                color white
                text-decoration none
                padding 0 0.2em
                display inline-block
                margin 10px 0.5em 0 0.5em
                
.posts
    padding 0.5em
    position relative

    .post
        background white
        color gris_texto
        box-shadow 2px 2px 10px rgba(black,0.5)
        border-radius 0 0 0.5em 0.5em

        .acciones
            border-top 3px solid azul
            padding 0.5em
            overflow hidden
                                                                                                                                            
            .votos
                    float left
                   
                    .down
                        color red
                        &:before
                            font-size 1.5em
                            font-family icomoon
                            content: "\e602"
                    .up
                        color green
                        &:before
                            font-size 1.5em
                            font-family icomoon
                            content: "\e603"

                    .down, .up
                        text-decoration none



            .datos
                float right
                .comentarios
                        background gris_texto
                        color white
                        padding 2px 5px
                        margin 0 1em 0 0
                        text-decoration none
                        border-radius: 3px
                .estrellita
                     text-decoration none
                     &:after
                        font-size 1.5em
                        font-family icomoon
                        color yellow
                        content "\e601"



        .descripcion            
                    color gris_texto
            


            .detalles
                height 160px
                margin-left 130px

                .autor
                    margin 0.5em 0 2em 0

                .fecha
                    float right
                    margin 0 1em 0 0 

                .tag
                    background azul
                    color white
                    text-decoration none
                    padding 0.2em 0.5em
                    border-radius 0.5em

                .titulo
                    height  70px
                    font-size 18px
                    font-style italic
                    color gris_oscuro
                    margin 0
                    padding 0.5em 0.5em 0 0 



            .imagen
                margin 0
                float left
                img
                    height 160px
                    width 120px
                    vertical-align top


footer 

    .powerd

        bottom 0
        margin 0
        width 100%
        padding 0.5em 0
        background: naranja 
        text-align center 

        strong
            display block
        .mejor
            &:before
            &:after
                content "-"  
    



.left
    float left
.right
    float right

@media screen and (min-width: 768px)
     
    .posts
            display: inline-block
            width: 46%
            margin-right:0            
            vertical-align: top
            margin-left: 0.7em
            &:nth-child(odd)//solo aplica para elementos impares y (even) aplica para elementos pares
                margin-right 0
                left 1em
            &:nth-child(even)
                right -1em

            
                

    header
        .titular
            .publicar
                margin-top: -.7em
                padding-left: 3em
                position: relative
                &:before
                    top: -10px
                    font-size 2.5em
                    left: 0
                    position absolute
    

            
                

